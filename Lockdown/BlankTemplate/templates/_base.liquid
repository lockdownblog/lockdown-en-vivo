        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block content_head %}{% endblock %}
        {% include 'head' %}
    </head>
	<body>
		<div class="content">
            {% include 'header' %}
			
			<main class="list">
				<div class="site-description">
                    <p>{{ site.subtitle }}</p>
				</div>

                {% block content %}
                {% endblock %}
                
			</main>
            {% include 'footer' %}
		</div>
		
	</body>
</html>